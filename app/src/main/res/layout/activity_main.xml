<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tableone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bk07"
    android:hapticFeedbackEnabled="true"
    tools:context=".MainActivity">

    <TableRow
        android:id="@+id/tbrw0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="@dimen/titel_text_size" />
    </TableRow>

    <TableRow
        android:id="@+id/tbrw1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/player1_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="@string/winer"
            android:textSize="@dimen/sub_text_size"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/player1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:textSize="@dimen/sub_text_size"
            android:text="@string/gamename" />
    </TableRow>

    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TableRow
            android:id="@+id/tbr2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:id="@+id/bu1"
                android:layout_width="@dimen/Buttom_a_wigth"
                android:layout_height="@dimen/Buttom_a_hight"
                android:layout_margin="@dimen/Button_a_m"
                android:background="#FFFFFF"
                android:textAlignment="center"
                android:onClick="butclicked"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/bu2"
                android:layout_width="@dimen/Buttom_a_wigth"
                android:layout_height="@dimen/Buttom_a_hight"
                android:layout_margin="@dimen/Button_a_m"
                android:background="#FFFFFF"
                android:textAlignment="center"
                android:onClick="butclicked"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/bu3"
                android:layout_width="@dimen/Buttom_a_wigth"
                android:layout_height="@dimen/Buttom_a_hight"
                android:layout_margin="@dimen/Button_a_m"
                android:background="#FFFFFF"
                android:textAlignment="center"
                android:onClick="butclicked"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tbrw3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/bu4"
                android:layout_width="@dimen/Buttom_a_wigth"
                android:layout_height="@dimen/Buttom_a_hight"
                android:layout_margin="@dimen/Button_a_m"
                android:background="#FFFFFF"
                android:textAlignment="center"
                android:onClick="butclicked"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/bu5"
                android:layout_width="@dimen/Buttom_a_wigth"
                android:layout_height="@dimen/Buttom_a_hight"
                android:layout_margin="@dimen/Button_a_m"
                android:background="#FFFFFF"
                android:textAlignment="center"
                android:onClick="butclicked"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/bu6"
                android:layout_width="@dimen/Buttom_a_wigth"
                android:layout_height="@dimen/Buttom_a_hight"
                android:layout_margin="@dimen/Button_a_m"
                android:background="#FFFFFF"
                android:textAlignment="center"
                android:onClick="butclicked"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tbrw4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/bu7"
                android:layout_width="@dimen/Buttom_a_wigth"
                android:layout_height="@dimen/Buttom_a_hight"
                android:layout_margin="@dimen/Button_a_m"
                android:background="#FFFFFF"
                android:textAlignment="center"
                android:onClick="butclicked"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/bu8"
                android:layout_width="@dimen/Buttom_a_wigth"
                android:layout_height="@dimen/Buttom_a_hight"
                android:layout_margin="@dimen/Button_a_m"
                android:background="#FFFFFF"
                android:textAlignment="center"
                android:onClick="butclicked"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/bu9"
                android:layout_width="@dimen/Buttom_a_wigth"
                android:layout_height="@dimen/Buttom_a_hight"
                android:layout_margin="@dimen/Button_a_m"
                android:background="#FFFFFF"
                android:textAlignment="center"
                android:onClick="butclicked"
                android:textSize="24sp" />

        </TableRow>

    </TableLayout>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/player2_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="@string/winer"
            android:textSize="@dimen/sub_text_size"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/player2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:textSize="@dimen/sub_text_size"
            android:text="@string/gamename" />
    </TableRow>

    <TableRow
        android:id="@+id/tbrw6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/Button_b_hight"
            android:background="@drawable/bourronsbk"
            android:gravity="center"
            android:text="@string/restartbutton"
            android:textSize="@dimen/sub_text_size" />

    </TableRow>

</TableLayout>
