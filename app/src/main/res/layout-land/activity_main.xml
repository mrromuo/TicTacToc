<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tableone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bk07"
    android:hapticFeedbackEnabled="true"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TableRow
        android:id="@+id/tbrw0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="@dimen/titel_text_size" />
    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TableRow
                android:id="@+id/tbrw6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/reset"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/Button_b_hight"
                    android:textSize="@dimen/sub_text_size"
                    android:text="@string/restartbutton" />


            </TableRow>
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TableRow
                android:id="@+id/tbr2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/bu1"
                    android:layout_width="@dimen/Buttom_a_wigth"
                    android:layout_height="@dimen/Buttom_a_hight"
                    android:layout_margin="@dimen/Button_a_m"
                    android:background="#FFFFFF"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/bu2"
                    android:layout_width="@dimen/Buttom_a_wigth"
                    android:layout_height="@dimen/Buttom_a_hight"
                    android:layout_margin="@dimen/Button_a_m"
                    android:background="#FFFFFF"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/bu3"
                    android:layout_width="@dimen/Buttom_a_wigth"
                    android:layout_height="@dimen/Buttom_a_hight"
                    android:layout_margin="@dimen/Button_a_m"
                    android:background="#FFFFFF"
                    android:textAlignment="center"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tbrw3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/bu4"
                    android:layout_width="@dimen/Buttom_a_wigth"
                    android:layout_height="@dimen/Buttom_a_hight"
                    android:layout_margin="@dimen/Button_a_m"
                    android:background="#FFFFFF"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/bu5"
                    android:layout_width="@dimen/Buttom_a_wigth"
                    android:layout_height="@dimen/Buttom_a_hight"
                    android:layout_margin="@dimen/Button_a_m"
                    android:background="#FFFFFF"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/bu6"
                    android:layout_width="@dimen/Buttom_a_wigth"
                    android:layout_height="@dimen/Buttom_a_hight"
                    android:layout_margin="@dimen/Button_a_m"
                    android:background="#FFFFFF"
                    android:textAlignment="center"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tbrw4"
                android:layout_width="@dimen/Buttom_a_wigth"
                android:layout_height="@dimen/Buttom_a_hight"
                android:layout_margin="@dimen/Button_a_m"
                android:gravity="center">

                <Button
                    android:id="@+id/bu7"
                    android:layout_width="@dimen/Buttom_a_wigth"
                    android:layout_height="@dimen/Buttom_a_hight"
                    android:layout_margin="@dimen/Button_a_m"
                    android:background="#FFFFFF"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/bu8"
                    android:layout_width="@dimen/Buttom_a_wigth"
                    android:layout_height="@dimen/Buttom_a_hight"
                    android:layout_margin="@dimen/Button_a_m"
                    android:background="#FFFFFF"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/bu9"
                    android:layout_width="@dimen/Buttom_a_wigth"
                    android:layout_height="@dimen/Buttom_a_hight"
                    android:layout_margin="@dimen/Button_a_m"
                    android:background="#FFFFFF"
                    android:textAlignment="center"
                    android:textSize="24sp" />
            </TableRow>

        </TableLayout>


    </LinearLayout>

    <TableRow
        android:id="@+id/tbrw1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/player2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:textSize="@dimen/sub_text_size"
            android:text="@string/winer"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/player1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:textSize="@dimen/sub_text_size"
            android:text="@string/gamename" />
    </TableRow>

</LinearLayout>
